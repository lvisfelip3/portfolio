---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';

const { currentLocale } = Astro;
---

<!doctype html>
<html lang={ currentLocale }>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="relative">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "Montserrat",system-ui, sans-serif;
		background: url("/img/background-portfolio3.webp") no-repeat center center / cover fixed;
		scroll-behavior: auto;
	}

	.borderCard {
		@apply border border-gray-400 border-opacity-10 hover:border-opacity-30 transition-all duration-200;
	}

	.tittles {
		@apply text-4xl md:text-6xl p-8 text-white font-bold text-center backdrop-brightness-125 border border-gray-400 border-opacity-10 rounded-lg borderCard mb-16 sm:mb-24
	}

	@font-face {
		font-family: "Nunito";
		font-style: normal;
		font-weight: 400;
		src: url('/font/Nunito-Regular.woff2');
	}

	@font-face {
		font-family: "Nunito";
		font-style: normal;
		font-weight: 500;
		src: url('/font/Nunito-Medium.woff2');
	}

	@font-face {
		font-family: "Nunito";
		font-style: normal;
		font-weight: 700;
		src: url('/font/Nunito-Bold.woff2');
	}

	@font-face {
		font-family: "Nunito";
		font-style: normal;
		font-weight: 800;
		src: url('/font/Nunito-ExtraBold.woff2');
	}

	@font-face {
		font-family: "Nunito";
		font-style: normal;
		font-weight: 900;
		src: url('/font/Nunito-Black.woff2');
	}
	@font-face {
		font-family: "Montserrat";
		font-style: normal;
		font-weight: 400;
		src: url('/font/Montserrat-Regular.woff2');
	}

	@font-face {
		font-family: "Montserrat";
		font-style: normal;
		font-weight: 500;
		src: url('/font/Montserrat-Medium.woff2');
	}

	@font-face {
		font-family: "Montserrat";
		font-style: normal;
		font-weight: 700;
		src: url('/font/Montserrat-Bold.woff2');
	}

	@font-face {
		font-family: "Montserrat";
		font-style: normal;
		font-weight: 800;
		src: url('/font/Montserrat-ExtraBold.woff2');
	}

	@font-face {
		font-family: "Montserrat";
		font-style: normal;
		font-weight: 900;
		src: url('/font/Montserrat-Black.woff2');
	}
	
</style>

<script>
	import tippy from 'tippy.js';
	import 'tippy.js/themes/material.css';
	import 'tippy.js/dist/tippy.css';

    document.addEventListener('astro:page-load', () => {
        tippy('[data-tooltip]', {
			content: (reference) => reference.getAttribute('data-tooltip'),
			theme: 'material',
			placement: 'bottom',
			touch: ['hold', 400],
			role: 'tooltip',
		});
    });
</script>